---
export interface Props {
	name: string;
	placeholder?: string;
	required?: boolean;
	value?: string;
	class?: string;
}

const {
	name,
	placeholder,
	required = false,
	value = "",
	class: className = "",
} = Astro.props;
---

<input
	type="tel"
	name={name}
	placeholder={placeholder}
	required={required}
	value={value}
	class={`w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 ${className}`}
	aria-describedby={`${name}-description`}
/>
