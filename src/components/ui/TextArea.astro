---
export interface Props {
	name: string;
	placeholder?: string;
	required?: boolean;
	value?: string;
	rows?: number;
	class?: string;
}

const {
	name,
	placeholder,
	required = false,
	value = "",
	rows = 4,
	class: className = "",
} = Astro.props;
---

<textarea
	name={name}
	placeholder={placeholder}
	required={required}
	rows={rows}
	class={`w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-vertical ${className}`}
	aria-describedby={`${name}-description`}>{value}</textarea
>
