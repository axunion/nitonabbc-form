---
import FormContainer from "@/components/forms/FormContainer.astro";
import FormField from "@/components/forms/FormField.astro";
import CheckboxGroup from "@/components/ui/CheckboxGroup.astro";
import EmailInput from "@/components/ui/EmailInput.astro";
import RadioGroup from "@/components/ui/RadioGroup.astro";
import SelectInput from "@/components/ui/SelectInput.astro";
import SubmitButton from "@/components/ui/SubmitButton.astro";
import TelInput from "@/components/ui/TelInput.astro";
import TextArea from "@/components/ui/TextArea.astro";
import TextInput from "@/components/ui/TextInput.astro";
import FormLayout from "@/layouts/FormLayout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";

// Simple form options for testing all components
const selectOptions = [
	{ value: "", label: "選択してください" },
	{ value: "student", label: "学生" },
	{ value: "engineer", label: "エンジニア" },
	{ value: "other", label: "その他" },
];

const radioOptions = [
	{ value: "beginner", label: "初心者" },
	{ value: "intermediate", label: "中級者" },
	{ value: "advanced", label: "上級者" },
];

const checkboxOptions = [
	{ value: "web", label: "Web開発" },
	{ value: "mobile", label: "モバイルアプリ" },
	{ value: "ai", label: "AI・機械学習" },
];
---

<FormLayout
	title="テクノロジー勉強会 2025年6月"
	description="プログラミングとテクノロジーの勉強会への申し込みフォーム"
>
	<Header>
		<h1 slot="title" class="text-3xl md:text-5xl font-bold tracking-tight">
			テクノロジー勉強会 2025年6月
		</h1>
		<p slot="description" class="text-lg md:text-xl text-blue-100 max-w-2xl mx-auto">
			2025年6月28日（土）13:00-17:00 開催
		</p>
	</Header>

	<div class="max-w-2xl mx-auto px-4">
		<main class="bg-white/90 backdrop-blur-sm rounded-lg border border-indigo-200 my-8">
			<div class="p-6 md:p-8">
				<form class="space-y-6">
					<FormContainer>
						<!-- Basic Text Input -->
						<FormField label="氏名" required>
							<TextInput
								slot="input"
								name="fullName"
								placeholder="山田 太郎"
								required
							/>
						</FormField>

						<!-- Email Input -->
						<FormField label="メールアドレス" required>
							<EmailInput
								slot="input"
								name="email"
								placeholder="example@example.com"
								required
							/>
						</FormField>

						<!-- Tel Input -->
						<FormField label="電話番号">
							<TelInput
								slot="input"
								name="phone"
								placeholder="090-1234-5678"
							/>
						</FormField>

						<!-- Select Input -->
						<FormField label="職業" required>
							<SelectInput
								slot="input"
								name="occupation"
								options={selectOptions}
								required
							/>
						</FormField>

						<!-- Radio Group -->
						<FormField label="プログラミング経験" required>
							<RadioGroup
								slot="input"
								name="experience"
								options={radioOptions}
								required
							/>
						</FormField>

						<!-- Checkbox Group -->
						<FormField label="興味のある分野" description="複数選択可">
							<CheckboxGroup
								slot="input"
								name="interests"
								options={checkboxOptions}
							/>
						</FormField>

						<!-- Text Area -->
						<FormField label="質問・コメント">
							<TextArea
								slot="input"
								name="comment"
								placeholder="ご質問やコメントがあればお書きください..."
								rows={4}
							/>
						</FormField>

						<!-- Submit Button -->
						<div class="pt-6">
							<SubmitButton>申し込みを送信</SubmitButton>
						</div>
					</FormContainer>
				</form>
			</div>
		</main>
	</div>

	<Footer>
		<div slot="description">
			プログラミングとテクノロジーの学習コミュニティ
		</div>
		<div slot="additional" class="mt-3">
			<p class="text-xs text-blue-200">
				このフォームは安全に処理されます
			</p>
		</div>
	</Footer>
</FormLayout>
